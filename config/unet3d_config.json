{
  "model_name": "UNet3D",
  "description": "3D U-Net for volumetric abdominal organ segmentation",
  
  "data_dir": "data/processed",
  "train_split": "data/splits/train_cases.json",
  "val_split": "data/splits/val_cases.json",
  "output_dir": "results/unet3d_baseline",
  
  "n_channels": 1,
  "n_classes": 4,
  "base_filters": 32,
  "trilinear": true,
  "use_checkpoint": true,
  "deep_supervision": false,
  
  "patch_size": [64, 128, 128],
  "batch_size": 8,
  "accumulation_steps": 2,
  "num_workers": 16,
  "cache_size": 15,
  "samples_per_volume": 8,
  "use_augmentation": true,
  
  "epochs": 100,
  "learning_rate": 0.0002,
  "min_lr": 1e-7,
  "warmup_epochs": 5,
  "weight_decay": 1e-5,
  "use_amp": true,
  
  "dice_weight": 0.5,
  "ce_weight": 0.5,
  "include_background": false,
  
  "early_stopping_patience": 10,
  "save_every": 10,
  
  "notes": "Optimized for L4 GPU (22GB). Uses gradient checkpointing and AMP. Memory: ~8GB. Effective batch size = 16. Throughput: ~7.7 samples/s"
}
